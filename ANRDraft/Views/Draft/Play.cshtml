@model ANRDraft.Models.ParticipantViewModel

@{
    ViewBag.Title = "View";
}
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/anrdraft.js"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        var draftname = @Html.Raw(Json.Encode(Model.DraftName));
        var playername = @Html.Raw(Json.Encode(Model.Name));
    </script>
}

<h2>View</h2>




<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-6 col-md-push-3">
            <div id="currentPack"></div>
        </div>
        <div class="col-xs-6 col-md-3 col-md-pull-6">
            <table id="selectedCards"></table>
        </div>
        <div class="col-xs-6 col-md-3">
            <div class="input-group">
                <input type="text" id="message" class="form-control" />
                <span class="input-group-btn"><input class="btn btn-default" type="button" id="sendmessage" value="Send" /></span>
            </div>
            <ul id="discussion"></ul>
        </div>
    </div>
</div>